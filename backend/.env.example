APP_NAME=kb-backend
APP_ENV=dev
HOST=0.0.0.0
PORT=8000

DATABASE_URL=postgresql+psycopg2://kb_user:kb_pass@localhost:5432/kb_db

CORS_ALLOW_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CORS_ALLOW_CREDENTIALS=false
CORS_ALLOW_HEADERS=*
CORS_ALLOW_METHODS=*

LOG_LEVEL=INFO
LOG_JSON=false
LOG_ACCESS=true

EMBEDDING_PROVIDER=local
